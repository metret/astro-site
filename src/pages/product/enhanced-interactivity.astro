---
import BoxLink from "~/components/blocks/BoxLink.astro";
import BoxLinkGrid from "~/components/blocks/BoxLinkGrid.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Dots from "~/components/Dots.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import SolutionHeroNoImage from "~/components/blocks/SolutionHeroNoImage.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionLink from "~/components/blocks/SolutionLink.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import "swiper/css";
---

<PageLayout title="Enhanced Interactivity">
  <Dots />

  <SolutionHeroNoImage
    pill="Enhanced Interactivity"
    title="Get your entire team excited to contribute"
    description="Don't get stuck in a forced question and answer cycle, Metro Retro's collaboration tools encourage all members of your team to engage with and enjoy meetings with personality."
  />

  <SolutionBanner
    title="Metro Retro enables better collaboration by giving everyone in your team the tools to communicate naturally"
  />

  <SolutionLargeItem
    mirror="false"
    title="A space designed to promote expression"
    description="Whether it's setting your own handwriting style, putting on a hat, keeping your sticky notes private or just throwing confetti every 5 minutes, Metro Retro understands that the best teams have mixed personalities and we don't try to put everyone in the same box."
    image="~/assets/images/product-outcomes/designed-for-expression.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Seamless collaboration for remote and hybrid teams"
    description="With pre-built templates, intuitive tools and facilitator controls which help you to guide participants through your meeting, Metro Retro is the closest thing to being in the room together, enabling all members of your team to contribute to discussions."
    image="~/assets/images/product-outcomes/seamless-collaboration-remote-and-hybrid.png"
  />

  <SolutionBanner
    title="Build a connected and effective team with Metro Retro"
  />

  <SolutionGrid columns="3">
    <SolutionLink
      href="/solutions/team-health"
      title="Improve team health"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/better-collaboration"
      title="Better Collaboration"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/team-alignment"
      title="Team Alignment"
      image="~/assets/images/feature-placeholder.png"
    />
  </SolutionGrid>

  <SolutionBanner
    title="Tools for focused collaboration and capturing meeting outcomes"
  />

  <SolutionGrid columns="2">
    <SolutionFeatureItem
      title="Activity Frames"
      description="Keep focus during your meetings by using Activity frames to drive discussion and make sure everyone is on the same page."
      image="~/assets/images/product-features/activity-frames.png"
    />
    <SolutionFeatureItem
      title="Actions, Comments & Mentions"
      description="Keep your team and project on track with easy communication and task tracking features."
      image="~/assets/images/product-features/actions-comments-mentions.png"
    />
    <SolutionFeatureItem
      title="Private Writing"
      description="Remove bias and promote a safe space for input by allowing team members to share their input anonymously."
      image="~/assets/images/product-features/private-writing.png"
    />
    <SolutionFeatureItem
      title="Topics"
      description="Easily group insights gathered during your collaborative session."
      image="~/assets/images/product-features/topics.png"
    />
  </SolutionGrid>

  <BoxLinkGrid title="For the whole team, no matter your role" columns="4">
    <BoxLink
      color="blue"
      title="Only 17 bots!!"
      badge="Product Designers"
      link="/solutions/product-designers"
    />
    <BoxLink
      color="purple"
      title="Only 17 bots!!"
      badge="Engineers"
      link="/solutions/engineers"
    />
    <BoxLink
      color="green"
      title="Only 17 bots!!"
      badge="Consultants"
      link="/solutions/consultants"
    />
    <BoxLink
      color="orange"
      title="Only 17 bots!!"
      badge="Engineering Manager"
      link="/solutions/engineering-manager"
    />
  </BoxLinkGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
