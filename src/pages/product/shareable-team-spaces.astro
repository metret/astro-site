---
import BoxLink from "~/components/blocks/BoxLink.astro";
import BoxLinkGrid from "~/components/blocks/BoxLinkGrid.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Dots from "~/components/Dots.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import SolutionHeroNoImage from "~/components/blocks/SolutionHeroNoImage.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionLink from "~/components/blocks/SolutionLink.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import "swiper/css";
import ActivityFramesFeatureItem from "~/components/blocks/features/ActivityFramesFeatureItem.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import PrivateWritingFeatureItem from "~/components/blocks/features/PrivateWritingFeatureItem.astro";
import TopicsFeatureItem from "~/components/blocks/features/TopicsFeatureItem.astro";
import RoadmapsFeatureItem from "~/components/blocks/features/RoadmapsFeatureItem.astro";
import EasyToUseJiraFeatureItem from "~/components/blocks/features/EasyToUseJiraFeatureItem.astro";
import CSVDataImportFeatureItem from "~/components/blocks/features/CSVDataImportFeatureItem.astro";
import SeamlessCollaborationRemoteAndHybridLargeItem from "~/components/blocks/large/SeamlessCollaborationRemoteAndHybridLargeItem.astro";
import DesignedForExpressionLargeItem from "~/components/blocks/large/DesignedForExpressionLargeItem.astro";
import BringStakeholderTogetherLargeItem from "~/components/blocks/large/BringStakeholderTogetherLargeItem.astro";
import PromoteTeamCultureFeatureItem from "~/components/blocks/features/PromoteTeamCultureFeatureItem.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import CreateSharedResponsibilityFeatureItem from "~/components/blocks/features/CreateSharedResponsibilityFeatureItem.astro";
---

<PageLayout title="Shareable Team Spaces">
  <Dots />

  <SolutionHeroNoImage
    pill="Shareable Team Spaces"
    title="Keep your team focused on what matters and build shared understanding"
    description="With dedicated team spaces you can easily manage multiple teams and project streams, remove document chaos and build a single source of truth."
  />

  <SolutionBanner
    title="Metro Retro enables teams to have a dedicated space for their meetings, projects and continuous improvement."
  />

  <BringStakeholderTogetherLargeItem mirror="false" />
  <SolutionLargeItem
    mirror="true"
    title="Give your teams ownership of their work"
    description="All teams have different processes and ways of working. Metro Retro team spaces enable your teams to build their own structures, meeting types and to build a system that works best for them."
    image="~/assets/images/feature-placeholder.png"
  />

  <SolutionBanner
    title="Build a connected and effective team with Metro Retro"
  />

  <SolutionGrid columns="3">
    <SolutionLink
      href="/solutions/team-health"
      title="Improve team health"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/better-collaboration"
      title="Better Collaboration"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/team-alignment"
      title="Team Alignment"
      image="~/assets/images/feature-placeholder.png"
    />
  </SolutionGrid>

  <SolutionBanner
    title="Everything your team needs to build their perfect way of working and create shared understanding."
  />

  <SolutionGrid columns="2">
    <ActionsCommentsMentionsFeatureItem />
    <PromoteTeamCultureFeatureItem />
    <DiagrammingFeatureItem />
    <CreateSharedResponsibilityFeatureItem />
  </SolutionGrid>

  <BoxLinkGrid title="For the whole team, no matter your role" columns="4">
    <BoxLink
      color="blue"
      title="Foster continuous improvement"
      badge="Agile Coaches"
      link="/solutions/agile-coaches"
    />
    <BoxLink
      color="purple"
      title="Align vision with execution"
      badge="Product Owners"
      link="/solutions/product-owners"
    />
    <BoxLink
      color="green"
      title="Deliver insights that matter"
      badge="Consultants"
      link="/solutions/consultants"
    />
    <BoxLink
      color="orange"
      title="Lead with clarity"
      badge="Engineering Manager"
      link="/solutions/engineering-manager"
    />
  </BoxLinkGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
