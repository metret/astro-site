---
import BoxLink from "~/components/blocks/BoxLink.astro";
import BoxLinkGrid from "~/components/blocks/BoxLinkGrid.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Dots from "~/components/Dots.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import Hero from "~/components/blocks/Hero.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionLink from "~/components/blocks/SolutionLink.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import "swiper/css";
import BuildTheWorkshopsLargeItem from "~/components/blocks/large/BuildTheWorkshopsLargeItem.astro";
import SeamlessCollaborationRemoteAndHybridLargeItem from "~/components/blocks/large/SeamlessCollaborationRemoteAndHybridLargeItem.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import ActivityFramesFeatureItem from "~/components/blocks/features/ActivityFramesFeatureItem.astro";
import PromoteTeamCultureFeatureItem from "~/components/blocks/features/PromoteTeamCultureFeatureItem.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import { pageMeta } from "~/utils";

const seo = await pageMeta({
  title: "Meetings & Workshops",
  description: "All teams are different, build the workflow that suits yours",
});
---

<PageLayout {...seo}>
  <Dots />

  <Hero
    pill="Meetings & Workshops"
    title="All teams are different, build the workflow that suits yours"
    description="Locked process and linear structures don't work for everyone. Ludi gives you complete freedom. Use a pre-built template to get going quickly, customize your own board for total freedom or combine both to build a board unique to your team."
  />

  <SolutionBanner title="Ludi adapts to suit your way of working" />

  <BuildTheWorkshopsLargeItem mirror="false" />
  <SeamlessCollaborationRemoteAndHybridLargeItem mirror="true" />

  <SolutionBanner title="Focus on outcomes, not process with Ludi" />

  <SolutionGrid columns="3">
    <SolutionLink
      href="/solutions/planning-ahead"
      title="Planning Ahead"
      image="~/assets/images/solution-links/planning-ahead.png"
    />
    <SolutionLink
      href="/solutions/project-reviews"
      title="Project Reviews"
      image="~/assets/images/solution-links/project-reviews.png"
    />
    <SolutionLink
      href="/solutions/team-alignment"
      title="Team Alignment"
      image="~/assets/images/solution-links/team-alignment.png"
    />
  </SolutionGrid>

  <SolutionBanner
    title="Tools for focused collaboration and capturing meeting outcomes"
  />

  <SolutionGrid columns="2">
    <ActivityFramesFeatureItem />
    <ActionsCommentsMentionsFeatureItem />
    <PromoteTeamCultureFeatureItem />
    <DiagrammingFeatureItem />
  </SolutionGrid>

  <BoxLinkGrid title="For the whole team, no matter your role" columns="4">
    <BoxLink
      color="green"
      title="Streamline design & engineering collaboration."
      badge="Product Designers"
      link="/solutions/product-designers"
    />
    <BoxLink
      color="orange"
      title="Prioritize the work that matters."
      badge="Delivery Managers"
      link="/solutions/delivery-managers"
    />
    <BoxLink
      color="blue"
      title="Create a culture of collaboration."
      badge="Agile Coaches"
      link="/solutions/agile-coaches"
    />
    <BoxLink
      color="green"
      title="Made by developers, for developers."
      badge="Developers"
      link="/solutions/developers"
    />
  </BoxLinkGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
