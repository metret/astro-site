---
import BoxLink from "~/components/blocks/BoxLink.astro";
import BoxLinkGrid from "~/components/blocks/BoxLinkGrid.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Dots from "~/components/Dots.astro";
import PageLayout from "~/layouts/PageLayout.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import SolutionHeroNoImage from "~/components/blocks/SolutionHeroNoImage.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionLink from "~/components/blocks/SolutionLink.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import "swiper/css";
---

<PageLayout title="Meetings & Workshops">
  <Dots />

  <SolutionHeroNoImage
    pill="Meetings & Workshops"
    title="All teams are different, build the workflow that suits yours"
    description="Locked process and linear structures don't work for everyone. Metro Retro gives you complete freedom. Use a pre-built template to get going quickly, customize your own board for total freedom or combine both to build a board unique to your team."
  />

  <SolutionBanner title="Metro Retro adapts to suit your way of working" />

  <SolutionLargeItem
    mirror="false"
    title="Tools for focused collaboration and capturing meeting outcomes"
    description="With pre-built templates, intuitive tools and facilitator controls which help you to guide participants through your meeting, Metro Retro is the closest thing to being in the room together, enabling all members of your team to contribute to discussions."
    image="~/assets/images/product-outcomes/tools-for-collaboration.png"
  />

  <SolutionBanner
    title="Build a connected and effective team with Metro Retro"
  />

  <SolutionGrid columns="3">
    <SolutionLink
      href="/solutions/customer-testimonials"
      title="Customer Testimonial block"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/faq"
      title="FAQ block which includes sign-up"
      image="~/assets/images/feature-placeholder.png"
    />
    <SolutionLink
      href="/solutions/getting-started"
      title="Getting Started"
      image="~/assets/images/feature-placeholder.png"
    />
  </SolutionGrid>

  <SolutionBanner title="Focus on outcomes, not process with Metro Retro" />

  <SolutionGrid columns="2">
    <SolutionFeatureItem
      title="Planning Ahead"
      description="Plan your meetings effectively to ensure all voices are heard."
      image="~/assets/images/product-features/planning-ahead.png"
    />
    <SolutionFeatureItem
      title="Project Reviews"
      description="Conduct thorough project reviews to align your team."
      image="~/assets/images/product-features/project-reviews.png"
    />
    <SolutionFeatureItem
      title="Team Alignment"
      description="Ensure your team is aligned and working towards common goals."
      image="~/assets/images/product-features/team-alignment.png"
    />
    <SolutionFeatureItem
      title="Activity Frames"
      description="Keep focus during your meetings by using Activity frames to drive discussion and make sure everyone is on the same page."
      image="~/assets/images/product-features/activity-frames.png"
    />
  </SolutionGrid>

  <BoxLinkGrid title="For the whole team, no matter your role" columns="4">
    <BoxLink
      color="blue"
      title="Product Designers"
      badge="Product Designers"
      link="/solutions/product-designers"
    />
    <BoxLink
      color="purple"
      title="Delivery Managers"
      badge="Delivery Managers"
      link="/solutions/delivery-managers"
    />
    <BoxLink
      color="green"
      title="Consultants"
      badge="Consultants"
      link="/solutions/consultants"
    />
    <BoxLink
      color="orange"
      title="Engineers"
      badge="Engineers"
      link="/solutions/engineers"
    />
  </BoxLinkGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
