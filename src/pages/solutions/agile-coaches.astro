---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";
import "swiper/css";
import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import PrivateWritingFeatureItem from "~/components/blocks/features/PrivateWritingFeatureItem.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import FocusedCollaborationFeatureItem from "~/components/blocks/features/FocusedCollaborationFeatureItem.astro";
import EstimateEffectivelyFeatureItem from "~/components/blocks/features/EstimateEffectivelyFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
---

<PageLayout title="Agile Coaches">
  <SolutionHero
    title="Deliver value to your teams with a product made for Agile."
    description="Every organization is different, Ludi adapts to the way you and your team want to work while providing all the tools necessary to create and maintain a culture of collaboration."
    image="~/assets/images/page-heroes/agile-coaches.png"
    color="blue"
    pill="Agile Coaches"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="Drive continuous improvement and help teams achieve the right goals with Ludi"
  />

  <SolutionLargeItem
    mirror="false"
    title="Build the workshop and frameworks your team needs"
    description="Combine expertly crafted board templates or customize your own. However you or your team work, Ludi is the flexible collaboration space for any session."
    image="~/assets/images/product-outcomes/build-the-workshops.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Monitor progress, remove blockers and plan ahead across teams."
    description="Whether you use Jira or our native action items, track outcomes from your meetings and review and refine how your teams work to remove obstacles and promote continuous improvement."
    image="~/assets/images/product-outcomes/monitor-progress-remove-blockers.png"
  />

  <SolutionLargeItem
    mirror="false"
    title="A visual space for shared understanding."
    description="Help your teams and stakeholders understand complex and abstract concepts easily in a visual platform which promotes engagement and makes ideas more tangible."
    image="~/assets/images/product-outcomes/visual-space-shared-understanding.png"
  />

  <SolutionBanner
    title="Guide teams to deliver value and build a culture which encourages participation."
  />

  <SolutionGrid columns="2">
    <PrivateWritingFeatureItem />
    <ActionsCommentsMentionsFeatureItem />
    <FocusedCollaborationFeatureItem />
    <EstimateEffectivelyFeatureItem />
  </SolutionGrid>

  <SolutionBanner title="Try these perfect Templates for Agile Teams" />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="ishakawa-diagram-a.k.a-fishbone"
      description="Try these perfect Templates for Product Design Teams"
    />
    <SolutionTemplateItem2
      alias="tshirt-estimation"
      description="Try these perfect Templates for Product Design Teams"
    />
    <SolutionTemplateItem2
      alias="definition-of-done"
      description="Try these perfect Templates for Product Design Teams"
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
