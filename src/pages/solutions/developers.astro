---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import "swiper/css";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";

import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import WearHatsFeatureItem from "~/components/blocks/features/WearHatsFeatureItem.astro";
import ActionsTrackingFeatureItem from "~/components/blocks/features/ActionsTrackingFeatureItem.astro";
import AgileProcessesFeatureItem from "~/components/blocks/features/AgileProcessesFeatureItem.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
---

<PageLayout title="Developers">
  <SolutionHero
    title="Metro Retro is made by developers for developers."
    description="Need to quickly sketch out an idea? Or produce a quick diagram? Or just want to avoid having to go into Jira? We got you."
    image="~/assets/images/page-heroes/developers.png"
    color="green"
    pill="Developers"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="A tool that doesn't get in your way, doesn't hide the things you want, and doesn't try to do too much."
  />

  <SolutionLargeItem
    mirror="false"
    title="Never go into Jira again!"
    description="Pull your tickets into your own private board. Arrange them how you want. Draw on them. Bulk update them (without using a stupid wizard). Verbally abuse them. Nobody will ever know."
    image="~/assets/images/product-outcomes/never-go-to-jira-again.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Access the data behind, when you need it"
    description="Unlike many other tools, Metro Retro doesn't hide the details away from you. Select any object in Metro Retro and Copy as JSON to copy the object data into the clipboard. Try building a wireframe, copying it as JSON and asking an LLM to convert it to HTML & Tailwind. The future is now."
    image="~/assets/images/product-outcomes/access-the-data.png"
  />

  <SolutionLargeItem
    mirror="false"
    title="Save time with our automated estimation & planning templates"
    description="From Fibonacci Estimation to Sprint Planning, save time and manual work with our automated templates. Vote together then have story points allocated in Jira automatically. Plan your sprint together by just dragging and dropping who's doing what. Keep track of allocation and kick off your sprint together."
    image="~/assets/images/product-outcomes/save-time-with-automation.png"
  />

  <SolutionBanner title="Tools that will make you smile and say 'Yeah!'" />

  <SolutionGrid columns="2">
    <WearHatsFeatureItem />
    <ActionsTrackingFeatureItem />
    <AgileProcessesFeatureItem />
    <DiagrammingFeatureItem />
  </SolutionGrid>

  <SolutionBanner title="Try these perfect Templates for Developers" />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="fibonacci-estimation"
      description="Estimate stories using Fibonacci numbers and automatically update Jira"
    />
    <SolutionTemplateItem2
      alias="product-backlog"
      description="A Kanban style product backlog template based on Metro Retro's own backlog layout"
    />
    <SolutionTemplateItem2
      alias="definition-of-done"
      description="Create and maintain your team's Definition of Done criteria"
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
