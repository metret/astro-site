---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import "swiper/css";
---

<PageLayout title="Planning Ahead">
  <SolutionHero
    title="Effective planning builds structure, reduces risk and keeps your team focused on what matters."
    description="Don't just focus on what you have done, Metro Retro helps your team plan the future of your organization, reducing costly rework and enhancing team coordination on what comes next."
    image="~/assets/images/page-heroes/hero-placeholder.png"
    color="orange"
  />

  <SolutionBanner
    title="Align your team and business goals with focused and cross-team collaboration in Metro Retro"
  />

  <SolutionLargeItem
    mirror="false"
    title="Prioritize the work ahead with clarity"
    description="A single space for backlog refinement, sprint review and planning means no more context switching. Keeping your teams focused on priority goals and the product vision."
    image="~/assets/images/product-outcomes/prioritize-work-ahead.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Bring stakeholders together in a shared space"
    description="Easily invite team members, guests and external stakeholders to your boards to build cross-team alignment. Metro Retro's intuitive experience means there is no need for extensive onboarding."
    image="~/assets/images/product-outcomes/bring-stakeholders-together.png"
  />

  <SolutionBanner
    title="Tools built for shared understanding and prioritizing your future"
  />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-2 gap-16 px-8">
      <SolutionFeatureItem
        title="Actions, Comments & Mentions"
        description="Keep your team and project on track with easy communication and task tracking features."
        image="~/assets/images/product-features/actions-comments-mentions.png"
      />
      <SolutionFeatureItem
        title="Estimate effectively"
        description="Work together to estimate size and scope of stories and tasks with prebuilt templates or tools like voting, polls, topic groups"
        image="~/assets/images/product-features/estimated-effectively.png"
      />
      <SolutionFeatureItem
        title="Agile processes"
        description="Run engaging planning and retrospective sessions with pre-built or custom templates. Polls, t-shirt sizing, action tracking and more"
        image="~/assets/images/product-features/agile-processes.png"
      />
      <SolutionFeatureItem
        title="Timelines & Roadmap Tools"
        description="Don't lay out your roadmap manually, just use our Timeline Frame to set out the dates and drag and drop cards on as you need."
        image="~/assets/images/product-features/roadmaps.png"
      />
    </div>
  </section>

  <SolutionBanner title="Try these perfect Templates for Planning Ahead" />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-3 gap-16 px-8">
      <SolutionFeatureItem
        title="Now-Next-Later Roadmap"
        description="Plan your product's journey with a clear timeline."
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionFeatureItem
        title="RAID Analysis"
        description="Identify and manage risks, assumptions, issues, and dependencies effectively."
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionFeatureItem
        title="On The Radar"
        description="Keep track of important tasks and projects that are on the horizon."
        image="~/assets/images/feature-placeholder.png"
      />
    </div>
  </section>

  <CustomerStories />

  <Testimonials />
</PageLayout>
