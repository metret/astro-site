---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import "swiper/css";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";

import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import EstimateEffectivelyFeatureItem from "~/components/blocks/features/EstimateEffectivelyFeatureItem.astro";
import AgileProcessesFeatureItem from "~/components/blocks/features/AgileProcessesFeatureItem.astro";
import RoadmapsFeatureItem from "~/components/blocks/features/RoadmapsFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
---

<PageLayout title="Planning Ahead">
  <SolutionHero
    title="Effective planning builds structure, reduces risk and keeps your team focused on what matters."
    description="Don't just focus on what you have done, Ludi helps your team plan the future of your organization, reducing costly rework and enhancing team coordination on what comes next."
    image="~/assets/images/page-heroes/planning-ahead.png"
    color="orange"
    pill="Planning Ahead"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="Align your team and business goals with focused and cross-team collaboration in Ludi"
  />

  <SolutionLargeItem
    mirror="false"
    title="Prioritize the work ahead with clarity"
    description="A single space for backlog refinement, sprint review and planning means no more context switching. Keeping your teams focused on priority goals and the product vision."
    image="~/assets/images/product-outcomes/prioritize-work-ahead.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Bring stakeholders together in a shared space"
    description="Easily invite team members, guests and external stakeholders to your boards to build cross-team alignment. Ludi's intuitive experience means there is no need for extensive onboarding."
    image="~/assets/images/product-outcomes/bring-stakeholders-together.png"
  />

  <SolutionBanner
    title="Tools built for shared understanding and prioritizing your future"
  />

  <SolutionGrid columns="2">
    <ActionsCommentsMentionsFeatureItem />
    <EstimateEffectivelyFeatureItem />
    <AgileProcessesFeatureItem />
    <RoadmapsFeatureItem />
  </SolutionGrid>

  <SolutionBanner title="Try these perfect Templates for Planning Ahead" />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="now-next-later-roadmap"
      description="Plan your product's journey with a clear timeline."
    />
    <SolutionTemplateItem2
      alias="raid-analysis"
      description="Identify and manage risks, assumptions, issues, and dependencies effectively."
    />
    <SolutionTemplateItem2
      alias="on-the-radar"
      description="Keep track of important tasks and projects that are on the horizon."
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
