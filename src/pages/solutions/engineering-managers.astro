---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import "swiper/css";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";
import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import EasyToUseJiraFeatureItem from "~/components/blocks/features/EasyToUseJiraFeatureItem.astro";
import RoadmapsFeatureItem from "~/components/blocks/features/RoadmapsFeatureItem.astro";
import TopicsFeatureItem from "~/components/blocks/features/TopicsFeatureItem.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
---

<PageLayout title="Engineering Managers">
  <SolutionHero
    title="Align your teams and deliver great software with Metro Retro"
    description="Every team is different. We believe the unique personalities of teams should be nurtured, not ignored. Whether they are a Scrum Team, or a Them Team... Metro Retro lets you craft your patterns & processes around your team. All while putting a smile on their faces."
    image="~/assets/images/page-heroes/engineerings-managers.png"
    color="blue"
    pill="Engineering Managers"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="From conception to execution, Metro Retro helps teams at every stage of the development lifecycle"
  />

  <SolutionLargeItem
    mirror="false"
    title="Keep everyone on the same track"
    description="Communicating direction is hard. Metro Retro makes it easy. Instantly usable templates for roadmapping, either timeline based or Now, Next Later, based. Plus the tools to create and communicate with ease."
    image="~/assets/images/product-outcomes/keep-everyone-on-track.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Save time with our automated estimation & planning templates"
    description="From Fibonacci Estimation to Sprint Planning, save time and manual work with our automated templates. Vote together then have story points allocated in Jira automatically. Plan your sprint together by just dragging and dropping who's doing what. Keep track of allocation and kick off your sprint together."
    image="~/assets/images/product-outcomes/save-time-with-automation.png"
  />

  <SolutionLargeItem
    mirror="false"
    title="Retrospectives that drive communication and continuous improvement"
    description="Active engagement from your team helps to uncover insights when reviewing past work. Metro Retro templates keep your meetings fresh and encourage participation."
    image="~/assets/images/product-outcomes/retros-that-drive-engagement.png"
  />

  <SolutionBanner title="Tools built to make you feel like a super hero." />

  <SolutionGrid columns="2">
    <EasyToUseJiraFeatureItem />
    <RoadmapsFeatureItem />
    <TopicsFeatureItem />
    <DiagrammingFeatureItem />
  </SolutionGrid>

  <SolutionBanner
    title="Try these perfect Templates for Engineering Managers"
  />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="timeline-roadmap"
      description="Visualize your product development timeline with clear milestones."
    />
    <SolutionTemplateItem2
      alias="fibonacci-estimation"
      description="Use Fibonacci numbers to estimate and prioritize tasks effectively."
    />
    <SolutionTemplateItem2
      alias="team-canvas"
      description="Define team purpose, goals, and working agreements for better alignment."
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
