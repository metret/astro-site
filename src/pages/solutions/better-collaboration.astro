---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";
import "swiper/css";
import SolutionTemplateItem from "~/components/blocks/SolutionTemplateItem.astro";
import PrivateWritingFeatureItem from "~/components/blocks/features/PrivateWritingFeatureItem.astro";
import ActivityFramesFeatureItem from "~/components/blocks/features/ActivityFramesFeatureItem.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import PromoteTeamCultureFeatureItem from "~/components/blocks/features/PromoteTeamCultureFeatureItem.astro";
---

<PageLayout title="Better Collaboration">
  <SolutionHero
    title="Good collaboration is built on communication, great collaboration is built on trust"
    description="Don't just bring your team together in a whiteboard and expect results, create an environment where individual personalities and openness are at the heart of your work."
    image="~/assets/images/page-heroes/better-collaboration.png"
    color="purple"
  />

  <div class="px-4">
    <div class="mx-auto mt-16 mb-6 max-w-[1024px] space-y-16">
      <UsageStatement />
    </div>
  </div>

  <CustomerLogos />

  <SolutionBanner
    title="Metro Retro has been designed to be the closest thing to a real whiteboard experience, where everyone in the room has a voice"
  />

  <SolutionLargeItem
    mirror="false"
    title="A space designed to promote expression"
    description="Whether it's setting your own handwriting style, putting on a hat, keeping your sticky notes private or just throwing confetti every 5 minutes, Metro Retro understands that the best teams have mixed personalities and we don't try to put everyone in the same box."
    image="~/assets/images/product-outcomes/designed-for-expression.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Seamless collaboration for remote and hybrid teams"
    description="With expertly crafted templates, intuitive tools and facilitator controls which help you to guide participants through your meeting, Metro Retro is the closest thing to being in the room together, enabling all members of your team to contribute to discussions."
    image="~/assets/images/product-outcomes/seamless-collaboration-remote-and-hybrid.png"
  />

  <SolutionBanner
    title="Everything you need to drive discussion together and keep momentum going when the meeting ends"
  />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-2 gap-16 px-8">
      <PrivateWritingFeatureItem />
      <ActivityFramesFeatureItem />
      <ActionsCommentsMentionsFeatureItem />
      <PromoteTeamCultureFeatureItem />
    </div>
  </section>

  <SolutionBanner
    title="Try these perfect Templates for Better Collaboration"
  />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-3 gap-16 px-8">
      <SolutionTemplateItem
        title="Two Truths, One Lie"
        description="Engage your team with this fun and interactive template."
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionTemplateItem
        title="Hot Air Balloon Retro"
        description="Lift your team's spirits and reflect on progress with this creative template."
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionTemplateItem
        title="Team Canvas"
        description="Align your team with a shared vision and goals using the Team Canvas template."
        image="~/assets/images/feature-placeholder.png"
      />
    </div>
  </section>

  <CustomerStories />

  <Testimonials />
</PageLayout>
