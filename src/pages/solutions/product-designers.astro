---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import "swiper/css";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";
import SolutionTemplateItem from "~/components/blocks/SolutionTemplateItem.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import ActionsCommentsMentionsFeatureItem from "~/components/blocks/features/ActionsCommentsMentionsFeatureItem.astro";
import TopicsFeatureItem from "~/components/blocks/features/TopicsFeatureItem.astro";
import ActivityFramesFeatureItem from "~/components/blocks/features/ActivityFramesFeatureItem.astro";
---

<PageLayout title="Product Designers">
  <SolutionHero
    title="Work with Design, Engineering and stakeholders in a single space. "
    description="Stop collecting feedback in comments, emails and message chains. Work with your team and stakeholders in a shared space to iterate and refine your concepts together."
    image="~/assets/images/page-heroes/product-designers.png"
    color="green"
  />

  <div class="px-4">
    <div class="mx-auto mt-16 mb-6 max-w-[1024px] space-y-16">
      <UsageStatement />
    </div>
  </div>

  <CustomerLogos />

  <SolutionBanner
    title="From concept to delivery, Metro Retro helps design teams craft the full picture"
  />

  <SolutionLargeItem
    mirror="false"
    title="Collaborate in a single space to build better experiences"
    description="Team members, stakeholders and guests can easily work together in a visual and accessible way to review and refine design decisions. Helping teams to uncover insights and make better decisions."
    image="~/assets/images/product-outcomes/collaborate-single-space.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Fully customizable canvas allows you to work your way."
    description="Whether writing a brief, reviewing wireframes or gathering feedback on final designs, Metro Retro's customization tools and templates let you work the way you want to."
    image="~/assets/images/product-outcomes/fully-custom-canvas.png"
  />

  <SolutionLargeItem
    mirror="false"
    title="Task tracking directly from your board"
    description="With our Jira Integration or Native Actions, you can create, manage and track tasks directly from your boards. Never lose valuable insights again."
    image="~/assets/images/product-outcomes/task-tracking-directly-from-board.png"
  />

  <SolutionBanner
    title="Everything you need to communicate without complexity"
  />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-2 gap-16 px-8">
      <DiagrammingFeatureItem />
      <ActionsCommentsMentionsFeatureItem />
      <TopicsFeatureItem />
      <ActivityFramesFeatureItem />
    </div>
  </section>

  <SolutionBanner
    title="Try these perfect Templates for Product Design Teams"
  />

  <section class="relative z-[1] py-8">
    <div class="mx-auto grid max-w-[1280px] grid-cols-3 gap-16 px-8">
      <SolutionTemplateItem
        title="User Journey Mapping"
        description="Try these perfect Templates for Product Design Teams"
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionTemplateItem
        title="Empathy Mapping"
        description="Try these perfect Templates for Product Design Teams"
        image="~/assets/images/feature-placeholder.png"
      />
      <SolutionTemplateItem
        title="Timeline Roadmap"
        description="Try these perfect Templates for Product Design Teams"
        image="~/assets/images/feature-placeholder.png"
      />
    </div>
  </section>

  <CustomerStories />

  <Testimonials />
</PageLayout>
