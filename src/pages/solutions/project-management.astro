---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import "swiper/css";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";

import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import DiagrammingFeatureItem from "~/components/blocks/features/DiagrammingFeatureItem.astro";
import CSVDataImportFeatureItem from "~/components/blocks/features/CSVDataImportFeatureItem.astro";
import EstimateEffectivelyFeatureItem from "~/components/blocks/features/EstimateEffectivelyFeatureItem.astro";
import RoadmapsFeatureItem from "~/components/blocks/features/RoadmapsFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import { pageMeta } from "~/utils";

const seo = await pageMeta({
  title: "Project Management",
  description:
    "See the full picture of your project in a single space. Avoid context switching and plan your entire project from concept to delivery in a single shared space for improved efficiency and coordination.",
  image: "~/assets/images/og-images/og-project-management.png",
});
---

<PageLayout {...seo}>
  <SolutionHero
    title="See the full picture of your project in a single space."
    description="Avoid context switching and plan your entire project from concept to delivery in a single shared space for improved efficiency and coordination."
    image="~/assets/images/page-heroes/project-management.png"
    color="purple"
    pill="Project Management"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="Plan, review, discuss and action your projects from a single source of truth"
  />

  <SolutionLargeItem
    mirror="false"
    title="A visual space for shared understanding."
    description="Help your teams and stakeholders understand complex and abstract concepts easily in a visual platform which promotes engagement and makes ideas more tangible."
    image="~/assets/images/product-outcomes/visual-space-shared-understanding.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="Prioritize what matters and identify potential risks early"
    description="Open and unbias discussion, voting, topic grouping and built-in estimation templates help you to focus on the work that matters rather than setting up complex processes to manage decision making."
    image="~/assets/images/product-outcomes/prioritize-what-matters.png"
  />

  <SolutionLargeItem
    mirror="false"
    title="Track outcomes from your meetings to share progress insights"
    description="Set and track Actions across your teams as they are raised in your meetings to ensure alignment, transparency and progress across your projects."
    image="~/assets/images/product-outcomes/track-outcomes-from-your-meetings-dash.png"
  />

  <SolutionBanner
    title="Increase engagement with your team and plan the work that matters most"
  />

  <SolutionGrid columns="2">
    <DiagrammingFeatureItem />
    <CSVDataImportFeatureItem />
    <EstimateEffectivelyFeatureItem />
    <RoadmapsFeatureItem />
  </SolutionGrid>

  <SolutionBanner title=" Expertly crafted Templates for Project Management." />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="good-bad-start-stop"
      description="Reflect on past work and plan improvements with this retrospective template."
    />
    <SolutionTemplateItem2
      alias="the-sailboat"
      description="Use the sailboat retrospective to identify what propels your team forward and what holds it back."
    />
    <SolutionTemplateItem2
      alias="ishakawa-diagram-a.k.a-fishbone"
      description="Analyze the root causes of problems with the Ishakawa (fishbone) diagram."
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
