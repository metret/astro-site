---
import PageLayout from "~/layouts/PageLayout.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Testimonials from "~/components/blocks/Testimonials.astro";
import SolutionHero from "~/components/blocks/SolutionHero.astro";
import SolutionBanner from "~/components/blocks/SolutionBanner.astro";
import SolutionLargeItem from "~/components/blocks/SolutionLargeItem.astro";
import SolutionFeatureItem from "~/components/blocks/SolutionFeatureItem.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import "swiper/css";

import PrivateWritingFeatureItem from "~/components/blocks/features/PrivateWritingFeatureItem.astro";
import PromoteTeamCultureFeatureItem from "~/components/blocks/features/PromoteTeamCultureFeatureItem.astro";
import WearHatsFeatureItem from "~/components/blocks/features/WearHatsFeatureItem.astro";
import CreateSharedResponsibilityFeatureItem from "~/components/blocks/features/CreateSharedResponsibilityFeatureItem.astro";
import SolutionGrid from "~/components/blocks/SolutionGrid.astro";
import SolutionTemplateItem2 from "~/components/blocks/SolutionTemplateItem2.astro";
import { pageMeta } from "~/utils";

const seo = await pageMeta({
  title: "Team Health",
  description:
    "Build a healthy team culture and keep your team engaged. Don't let your team get stuck in a rut, Ludi provides all the tools you need to help your team collaborate effectively and achieve their goals.",
  image: "~/assets/images/og-images/og-team-health.png",
});
---

<PageLayout {...seo}>
  <SolutionHero
    title="Build a healthy team culture and keep your team engaged"
    description="Don't let your team get stuck in a rut, Ludi provides all the tools you need to help your team collaborate effectively and achieve their goals."
    image="~/assets/images/page-heroes/team-health.png"
    color="green"
    pill="Team Health"
  />

  <UsageStatement />

  <CustomerLogos />

  <SolutionBanner
    title="Give everyone in your team a voice and celebrate achievements together with Ludi"
  />

  <SolutionLargeItem
    mirror="false"
    title="Break the ice and energize your team"
    description="Ludi is packed full of  templates, one of those areas being Ice Breakers and Energizers. As a software team we understand the pain of staying enthusiastic for every meeting. It's why we've designed fun, light, kick-off templates to help get teams in the mood for collaboration."
    image="~/assets/images/product-outcomes/break-ice-and-energise.png"
  />

  <SolutionLargeItem
    mirror="true"
    title="A space designed to promote expression"
    description="Whether it's setting your own handwriting style, putting on a hat, keeping your sticky notes private or just throwing confetti every 5 minutes, Ludi understands that the best teams have mixed personalities and we don't try to put everyone in the same box."
    image="~/assets/images/product-outcomes/designed-for-expression.png"
  />

  <SolutionBanner
    title="Encourage open communication and collaboration with Ludi."
  />

  <SolutionGrid columns="2">
    <PrivateWritingFeatureItem />
    <PromoteTeamCultureFeatureItem />
    <WearHatsFeatureItem />
    <CreateSharedResponsibilityFeatureItem />
  </SolutionGrid>

  <SolutionBanner title="Try these perfect Team Health Templates" />

  <SolutionGrid columns="3">
    <SolutionTemplateItem2
      alias="explorer-shopper-vacationer-prisoner"
      description="Explore different team dynamics and roles with this engaging template."
    />
    <SolutionTemplateItem2
      alias="team-mood-icebreaker"
      description="Kick off your meetings with a fun and engaging icebreaker to set the mood."
    />
    <SolutionTemplateItem2
      alias="two-truths-one-lie"
      description="Get to know your team better with this classic icebreaker game."
    />
  </SolutionGrid>

  <CustomerStories />

  <Testimonials />
</PageLayout>
