---
import AboutHero from "~/components/blocks/AboutHero.astro";
import CustomerLogos from "~/components/blocks/CustomerLogos.astro";
import CustomerStories from "~/components/blocks/CustomerStories.astro";
import Emoji from "~/components/blocks/Emoji.astro";
import OurStory from "~/components/blocks/OurStory.astro";
import SignUp from "~/components/blocks/SignUp.astro";
import Statement from "~/components/blocks/Statement.astro";
import Values from "~/components/blocks/Values.astro";
import WallOfLove from "~/components/blocks/WallOfLove.astro";
import PageLayout from "~/layouts/PageLayout.astro";

import Dots from "~/components/Dots.astro";
import UsageStatement from "~/components/blocks/instances/UsageStatement.astro";

const meta = {
  title: "About Us",
  description:
    "Great things happen when teams are in flow and enjoy what they do. At Metro Retro, we create human-centered collaboration and continuous improvement tools designed for engaged, efficient, and—most importantly—fun teamwork.",
};
---

<PageLayout {...meta}>
  <Dots />

  <AboutHero />

  <Emoji />

  <Values />

  <OurStory />

  <UsageStatement />

  <CustomerLogos />

  <WallOfLove />

  <CustomerStories include={["ryd", "kayak", "meltwater"]} />
</PageLayout>
