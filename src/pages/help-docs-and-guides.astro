      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-3">
        {
          videoCards.slice(0, 3).map((card) => (
            <div class="hover:shadow-mr relative rounded-[10px] border border-[#dee9f9] bg-white transition-shadow">
              <div class="flex flex-col overflow-hidden rounded-[inherit]">
                <div class="relative w-full shrink-0">
                  <div class="relative aspect-video w-full">
                    <Image
                      src={card.cover}
                      alt=""
                      class="pointer-events-none absolute inset-0 size-full max-w-none object-cover object-center"
                    />
                  </div>
                </div>
                <div class="flex flex-1 flex-col gap-2.5 px-2.5 py-2.5 text-[#627496]">
                  <div class="flex w-full items-center justify-between">
                    <p class="min-h-0 min-w-0 flex-1 text-lg font-medium capitalize">
                      {card.title}
