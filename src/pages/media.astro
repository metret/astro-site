---
import PageLayout from "~/layouts/PageLayout.astro";
import logoNamePng from "../assets/images/media/logo-name.png";
import logoTransPng from "../assets/images/media/logo-trans.png";
import logoDiscPng from "../assets/images/media/logo-disc.png";
import logoRegPng from "../assets/images/media/logo-reg.png";
import logoInvPng from "../assets/images/media/logo-inv.png";
import logoSplashPng from "../assets/images/media/logo-splash.png";
import logoTransInvPng from "../assets/images/media/logo-trans-inv.png";
import logoSplashInvPng from "../assets/images/media/logo-splash-inv.png";
import logoNameInvertedPng from "../assets/images/media/logo-name-inverted.png";
import logoDiscInvPng from "../assets/images/media/logo-disc-inv.png";
import Statement from "~/components/blocks/Statement.astro";

const mediaItems = [
  { name: "Logo Regular", image: logoRegPng, format: "PNG" },
  { name: "Logo Inverted", image: logoInvPng, format: "PNG" },
  { name: "Logo Disc", image: logoDiscPng, format: "PNG" },
  { name: "Logo Disc Inverted", image: logoDiscInvPng, format: "PNG" },
  { name: "Logo Transparent", image: logoTransPng, format: "PNG" },
  { name: "Logo Transparent Inverted", image: logoTransInvPng, format: "PNG" },
  { name: "Logo Splash", image: logoSplashPng, format: "PNG" },
  { name: "Logo Splash Inverted", image: logoSplashInvPng, format: "PNG" },
  { name: "Logo with Name", image: logoNamePng, format: "PNG" },
  { name: "Logo Name Inverted", image: logoNameInvertedPng, format: "PNG" },
];
---

<PageLayout title="Media">
  <section class="mx-auto mt-8 max-w-[80rem] lg:mt-24">
    <div class="mb-16">
      <Statement text="Ludi Media Assets" />
    </div>
    <div
      class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
    >
      {
        mediaItems.map((item) => (
          <div class="overflow-hidden rounded-lg bg-white shadow-md">
            <div class="relative aspect-square bg-blue-100">
              <a
                href={item.image.src}
                download={item.name.toLowerCase().replace(/\s+/g, "-") + ".png"}
              >
                <img
                  src={item.image.src}
                  alt={item.name}
                  width={item.image.width}
                  height={item.image.height}
                  class="cursor-pointer object-contain p-4 transition-opacity hover:opacity-90"
                />
              </a>
            </div>
            <div class="p-4">
              <h3 class="mb-2 text-lg font-semibold">{item.name}</h3>
              <div class="text-sm text-gray-600">
                <p>Format: {item.format}</p>
                <p>
                  Dimensions: {item.image.width} Ã— {item.image.height}px
                </p>
                <div class="mt-2 flex gap-2">
                  <a
                    href={item.image.src}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-gray-300 ring-inset hover:bg-gray-100"
                  >
                    View
                  </a>
                  <a
                    href={item.image.src}
                    download={
                      item.name.toLowerCase().replace(/\s+/g, "-") + ".png"
                    }
                    class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-gray-300 ring-inset hover:bg-gray-100"
                  >
                    Download
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
  <section></section>
</PageLayout>
