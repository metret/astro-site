---

<PageLayout title="Help & Guides" spacing="lg">
  <div class="mx-auto mt-8 max-w-7xl px-4 lg:mt-16">
    <!-- Videos Section -->
    <div class="flex flex-col">
      <div class="mb-10">
        <h2 class="text-3xl font-medium text-gray-300">Tutorial Videos</h2>
        <div class="mt-2">
          <Wibble />
        </div>
      </div>

      <!-- Video Cards Grid -->
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          videoCards.map((card) => (
            <a
              href={card.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col"
            >
              <div class="relative aspect-video w-full overflow-hidden rounded-xl">
                <img
                  src={card.cover}
                  alt={card.title}
                  class="h-full w-full object-cover"
                />
                <div class="absolute inset-0 bg-black/10 opacity-0 transition-opacity duration-200 group-hover:opacity-100" />
                <div class="absolute inset-0 flex items-center justify-center">
                  <svg
                    class="h-16 w-16 transition-transform duration-200 group-hover:scale-110"
                    viewBox="0 0 64 64"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <circle
                      cx="32"
                      cy="32"
                      r="32"
                      fill="white"
                      fill-opacity="0.9"
                    />
                    <path d="M26 22L44 32L26 42V22Z" fill="#3b65ef" />
                  </svg>
                </div>
              </div>
              <div class="flex flex-col gap-3 px-1.5 pt-3">
                <div class="flex items-center gap-2">
                  <span class="rounded-full bg-[#3b65ef]/10 px-2.5 py-1 text-xs font-medium text-[#3b65ef]">
                    {card.tag} Â· {card.duration}
                  </span>
                </div>
                <span class="text-body line-clamp-2 text-sm">{card.title}</span>
              </div>
            </a>
          ))
        }
      </div>
    </div>

    <!-- Guides Section -->
    <div class="mt-20 flex flex-col">
      <div class="mb-10">
        <h2 class="text-3xl font-medium text-gray-300">Guides</h2>
        <div class="mt-2">
          <Wibble />
        </div>
      </div>
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2">
        {
          guideCards.map((card) => (
            <a
              href={card.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex overflow-hidden rounded-lg border border-gray-200 bg-white transition-shadow hover:shadow-lg"
            >
              <div class="relative h-28 w-48 shrink-0 overflow-hidden">
                <img
                  src={card.cover}
                  alt={card.title}
                  class="h-full w-full object-cover"
                />
              </div>
              <div class="text-body flex flex-1 flex-col gap-2 px-5 py-3">
                <p class="text-lg font-medium text-gray-300">{card.title}</p>
                <p class="line-clamp-2 text-sm">{card.description}</p>
              </div>
            </a>
          ))
        }
      </div>

      <!-- Docs Section -->
      <div class="mt-20 mb-10">
        <h2 class="text-3xl font-medium text-gray-300">Docs</h2>
        <div class="mt-2">
          <Wibble />
        </div>
      </div>

      <!-- Doc Cards Grid -->
      <div class="grid grid-cols-1 gap-5 md:grid-cols-2 xl:grid-cols-3">
        {
          docCards.map((card) => (
            <a
              href={card.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex overflow-hidden rounded-lg border border-gray-200 bg-white transition-shadow hover:shadow-lg"
            >
              <div class="relative h-30 w-30 shrink-0 overflow-hidden bg-gray-50">
                <div class="absolute inset-0 opacity-60">
                  <img
                    alt=""
                    class="h-full w-full object-cover"
                    src={imgImage7}
                  />
                </div>
                <div class="absolute top-1/2 left-1/2 h-16 w-16 -translate-x-1/2 -translate-y-1/2">
                  <img src={card.icon} alt="" class="h-full w-full" />
                </div>
              </div>
              <div class="text-body flex flex-1 flex-col gap-2.5 p-4">
                <p class="text-lg font-medium text-gray-300">{card.title}</p>
                <p class="text-sm">{card.description}</p>
              </div>
