---
interface Props {
  columns: any;
  title: string;
}

const { columns, title }: Props = Astro.props;
---

<sction class="relative">
  <div class="mx-auto max-w-[80rem] px-8 py-16">
    <h3 class="text-center text-2xl font-semibold">{title}</h3>
    <div class={`mt-8 grid gap-8 grid-cols-${columns}`}>
      <slot />
    </div>
  </div>
</sction>
