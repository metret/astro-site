---
const info: { label: string; value: string }[] = [
  {
    label: "Company",
    value: "ryd",
  },
  {
    label: "Industry",
    value: "Financial Software",
  },
  {
    label: "Team",
    value: "5 Remote teams, Munich, Portugal & Ukraine",
  },
  {
    label: "Interviewee",
    value: "Bernhard Unger-Weber, Scrum Master",
  },
];
---

<section class="px-4 py-16">
  <div
    class="mx-auto grid max-w-[80rem] grid-cols-1 gap-6 md:grid-cols-[420px_1fr]"
  >
    <div>
      <div
        class="space-y-3 rounded-[10px] bg-white p-4 drop-shadow-[0_4px_10px_rgba(98,116,150,0.1)]"
      >
        <p class="text-blue text-xl/6 font-semibold">Customer Factsheet</p>

        <div class="border-grey-200 divide-grey-200 divide-y border">
          {
            info.map((item) => (
              <div class="divide-grey-200 grid grid-cols-[150px_1fr] divide-x *:p-3">
                <div>
                  <p class="text-body text-base/6">{item.label}</p>
                </div>
                <div>
                  <p class="text-body text-base/6 font-medium">{item.value}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <div class="border-grey-200 h-[572px] border md:h-[1080px]"></div>
  </div>
</section>
