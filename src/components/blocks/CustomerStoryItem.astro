---
import { Image } from "astro:assets";
import { dynamicImportImage } from "~/utils";

type Props = {
  color: string;
  image: string;
  description: string;
};

const { image, description } = Astro.props as Props;

const loadedImage = await dynamicImportImage(image);
---

<div class="max-w-[24rem]">
  <Image src={loadedImage} alt="" class="rounded-xl" />
  <div class="px-4 py-3">
    <p class="text-body text-lg/6 font-medium">
      {description}
    </p>
  </div>
</div>
