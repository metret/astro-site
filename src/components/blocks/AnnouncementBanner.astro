---
import Wibble from "../ui/Wibble.astro";
import abMetroRetro from "~/assets/images/ab-metroretro.svg";
import abLudi from "~/assets/images/ab-ludi.svg";
import { Image } from "astro:assets";
---

<div
  class="bg-purple-300 px-4 py-3 text-center text-base leading-5 font-medium text-white md:py-6"
>
  <div class="container mx-auto flex justify-center">
    <div class="flex flex-col items-center justify-center gap-4 md:flex-row">
      <!-- Left Column - Image -->
      <div class="flex-shrink-0">
        <div class="flex items-center gap-4">
          <!-- First Column - Image -->
          <Image
            src={abMetroRetro}
            alt="metroretro-logo"
            class="h-8 w-auto md:h-8"
          />
          <!-- Second Column - Text -->
          <div class="text-sm md:text-base">
            <span>is now</span>
          </div>
          <!-- Third Column - Image -->
          <Image src={abLudi} alt="ludi-logo" class="h-8 w-auto md:h-10" />
        </div>
      </div>

      <!-- Middle Column - Wibble Component -->
      <div class="flex-shrink-0">
        <div class="opacity-50">
          <Wibble />
        </div>
      </div>

      <!-- Right Column - Text -->
      <div class="flex-1 text-center text-sm md:text-left md:text-base">
        <p>
          Read about the rebrand in
          <a
            href="https://ludi.co/blog/metro-retro-is-now-ludi"
            class="text-sm underline decoration-white decoration-1 underline-offset-2 md:text-base"
            target="_blank">our Blog</a
          >
        </p>
      </div>
    </div>
  </div>
</div>
