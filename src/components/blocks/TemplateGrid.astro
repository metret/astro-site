---
interface Props {
  title: string;
}

const { title }: Props = Astro.props;
---

<section>
  <div class="mx-auto max-w-[80rem]">
    <h3 class="text-xl font-medium">{title}</h3>
    <div
      class="grid grid-cols-1 gap-6 py-6 md:grid-cols-2 lg:grid-cols-3 lg:py-4"
    >
      <slot />
    </div>
  </div>
</section>
