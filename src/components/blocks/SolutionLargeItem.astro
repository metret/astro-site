---
const { title, description, image, mirror } = Astro.props;
import { Image } from "astro:assets";
import { dynamicImportImage } from "~/utils";
const loadedImage = await dynamicImportImage(image);
---

<section class="relative z-[1] py-16">
  <div
    class:list={[
      "mx-auto grid max-w-[1280px] items-center gap-24 px-8",
      mirror === "false" && "grid-cols-[auto_1fr]",
      mirror === "true" && "grid-cols-[1fr_auto]",
    ]}
  >
    {
      mirror === "false" && (
        <Image
          class="h-full w-full rounded-[20px] border-1 border-solid border-blue-200/15 object-cover shadow-xl shadow-blue-200/10"
          style="width: 640px; height: 380px;"
          src={loadedImage}
          alt={title}
        />
      )
    }
    <div>
      <h3 class="mb-4 text-3xl font-semibold text-black">
        {title}
      </h3>
      <p class="text-l mb-4 text-gray-300">
        {description}
      </p>
    </div>
    {
      mirror === "true" && (
        <Image
          class="h-full w-full rounded-[20px] border-1 border-solid border-blue-200/15 object-cover shadow-xl shadow-blue-200/10"
          style="width: 640px; height: 380px;"
          src={loadedImage}
          alt={title}
        />
      )
    }
  </div>
</section>
